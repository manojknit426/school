              <form role="form" action="/schools/school_login" method="post" >
  <div class="form-group">
    
    <div class="col-sm-12">
   <textarea name="" class="form-control" id="note_text" placeholder="enter your note here"></textarea>
   
    </div>
  </div>
  <div class="form-group">
    
