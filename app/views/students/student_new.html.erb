<div class="container">
	<div class="row">
	<div class="col-md-8 col-md-offset-2">
	
	
	<div class="panel panel-default">
	
		
		<div class="panel-heading">
			<%if error ||sussces%>

        <div class="error" ><ul><% error.each do |message| %>
              <li><%= message %></li>
              <% end %>
          <span style="color: green"><%=sussces%></span></li>
        	
        	
            	
        	
        </ul>
        	
        	
        </div>

                 <%end%>
			<div class="panel-title">Create Your Profile</div>
			
		</div>
		
		<div class="panel-body">
		
		 <div class="col-md-8">
		 	<form action="/students/student_create" method="post" role="form">
		 	<div class="form-group">
                    <label for="first_name">First Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="first_name" name="studentdata[name]" placeholder="First Name" value="<%=session[:ts_email]%>">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                       <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="last_name" name="studentdata[lastname]" placeholder=" Last Name" required autocomplete="true">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                    <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="mobile" name="studentdata[mobile]" placeholder=" Mobile" required autocomplete="true">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>    
		 	  <div class="form-group">
                    <label for="grade">Grade</label>
                   <div class="input-group">
                         <select name="studentdata[std]" id="grade" class="form-control">
                  <option>1st</option>
                  <option>2nd</option>
                  <option>3rd</option>
                  <option>4th</option>
                  <option>5th</option>
                  <option>6th</option>
                  <option>7th</option>
                  <option>8th</option>
                </select>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div> 
                </div>
               
		 	<input type="submit" value="Create profile" class="btn btn-primary"/>
		</form>
		 </div>	
				<div class="col-md-4 " style="margin-top: 50px;">
				
				<div class=" well  ">
				<form  role="form"  action="/students/student_image_upload" method="post" data-remote='true' enctype="multipart/form-data">
					<img id="img_here" src="" class='img-thumbnail' style="width: 150px;height: 150px"/>
					   <input type="file" name="studentimagedata[image]"  >
               <input type="submit"  id="t_image" />                
                  				
				</form>
				</div>
			</div>
			
			
			
		</div>
		
		<div class="panel-footer">footer</div>
		
		
		
	</div>
	
	
	</div>
	
	</div>
<script>
$(document).ready(function(){
	
	$('#t_image').click(function(){
	
	$("#img_here").attr("src","/load.gif");
	$("#img_here").removeAttr('style');
});

	
});
</script>
</div>
