<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <div class="panel panel-default  ">
      <div class="panel-heading"><h5>Reset password</h5><br /><span><%=@user.email%> enter new password </span>
      	
      	<%if error ||sussces%>

        <div class="error" ><ul><li><%=error%><span style="color: green"><%=sussces%></span></li>
        	
        	
        </ul>
        	
        	
        </div>

                 <%end%></div>
         
          <div class="panel-body">
     
      <form class="form-horizontal" role="form" action="/passwords/new_password" method="post">
 <input type="hidden" id="email" name="user[email]" value="<%=@user.email%>" />
  <div class="form-group">
    <label for="paasword" class="col-sm-2 control-label">New Password</label>
    <div class="col-sm-10">
      <input type="password" name="user[password]" class="form-control" id="password" placeholder="Enter new password">
    </div>
  </div>
  <div class="form-group">
    <label for="password_confirmation" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" name="user[password_confirmation]" class="form-control" id="password_confirmation" placeholder="Confirm new password">
    </div>
  </div>
  
      
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <button type="submit" class="btn btn-primary">Reset password</button>
    </div>
   
  </div>
</form>
    </div>
</div>
</div>
</div>
   