<form class="form-horizontal" role="form" action="/quizzes/update_quiz" method="post"  >
                   
                    <div class="form-group">
                         <label for="question" class="col-sm-2 control-label">Question</label>
                           <div class="col-sm-10">
                              <textarea class="form-control" name="quizdata[question]" id="question" placeholder="Write question here" required ><%=@quiz.question%></textarea>
                           </div>
                    </div>
                   
                    <div class="form-group">
                       <label for="a" class="col-sm-2 control-label">A:</label>
                          
                          <div class="col-sm-5">
                            <input type="text" name="quizdata[a]" class="form-control" id="a" value="<%=@quiz.a%>" placeholder="Option1" required>
                          </div>
                    </div>
                   
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">B:</label>
                          
                            <div class="col-sm-5">
                            <input type="text" name="quizdata[b]" class="form-control" id="b" value="<%=@quiz.b%>" placeholder="Option2" required>
                          </div>
                    </div>
                   <div class="form-group">
                       <label for="c" class="col-sm-2 control-label">C:</label>
                          
                          <div class="col-sm-5">
                            <input type="text" name="quizdata[c]" class="form-control" id="c" value="<%=@quiz.c%>"  placeholder="Optin3" required>
                          </div>
                    </div>
                   <div class="form-group">
                       <label for="d" class="col-sm-2 control-label">D:</label>
                          
                          <div class="col-sm-5">
                            <input type="text" name="quizdata[d]" class="form-control" id="d" value="<%=@quiz.d%>"  placeholder="Option4" required>
                          </div>
                    </div>
                   <div class="form-group">
                    <script>
              	$(document).ready(function(){
              // alert('its call A'); 
              var v='<%=@quiz.answer%>';
              if(v=='A'){
               $('#A').attr('checked',true);
                }
               if(v=='B'){
              
             $('#B').attr('checked',true);
              
               }
              
               if(v=='C'){
             
             $('#C').attr('checked',true);
              
               }
              
               if(v=='D'){
             
             $('#D').attr('checked',true);
              
               }
              
               
                
                                  });
              	
              </script>    
            <label for="radio" class=" col-sm-2 control-label input-group ">Answer</label>
              <div>
                  <label class="control-label" >
                  <input type="radio" name="quizdata[answer]" value="A" id="A">A
                       </label>
                  <label class="control-label" >
                 <input type="radio" name="quizdata[answer]" value="B" id="B" >B
                     </label>
                  <label class="control-label" >
                   <input type="radio" name="quizdata[answer]" value="C" id="C">C
                    </label>
                     <label class="control-label" >
                   <input type="radio" name="quizdata[answer]" value="D" id="D">D
                    </label>
                   </div>
                            
                          </div>
                   <div class="form-group">
                          <div class="col-sm-4 col-sm-offset-2">
                            <input type="hidden"  class="form-control" name="quizdata[id]" id="hidden" value="<%=@quiz.id%>" >
                          </div>
                    </div>
                   <div class="form-group">
                          <div class="col-sm-8 col-sm-offset-2">
                            <div class="col-sm-5">
                            <input type="submit"  class="form-control btn btn-primary" id="submit" value="update Question" >
                            </div>
                            <div class="col-sm-3" style="margin: 0px;padding: 0px">
 
                        <a href="/quizzes/create_quiz" class="btn btn-primary">cancel</a>
                         </div>
                          </div>
                    </div>
               </form>    
                   
                  
		   